" Map <Esc> to jk
inoremap jk <Esc>
xnoremap jk <Esc>
set timeoutlen=300

set number
set relativenumber
set showcmd
set showmode

set incsearch
set hlsearch
set ignorecase
set smartcase

set so=5

let mapleader = "\<space>"

map <leader>rf <Action>(ReformatCode)
map <leader>ru <Action>(Run)

" Stop running
map <leader>s <Action>(Stop)

" Map <leader>d to start debug
map <leader>d <Action>(ChooseDebugConfiguration)

" Map \b to toggle the breakpoint on the current line
map \b <Action>(ToggleLineBreakpoint)

map <leader>o <Action>(FileStructurePopup)

noremap <leader>y "*y
noremap <leader>Y "*Y
noremap <leader>p "*p
noremap <leader>P "*P

noremap <leader>/ <Action>(Find)
